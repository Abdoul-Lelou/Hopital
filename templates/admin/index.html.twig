{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}


{% block content %}
<br><br><br><br>
<div class="container" >
<table class="table table-striped col col-sm-8" align="center">
    <thead class="table table-default">
        <tr>
            <th>id</th>
            <th>libelle</th>
            <th>Action</th>
        </tr>
    </thead> 
    <tbody>
    {% for s in services %}
        <tr> 
            <td scope="row">{{s.id}}</td>
            <td>{{s.libelle}}</td>
            <td>
                <a href="{{ path('admin.service.edit',{'id': s.id}) }}" class="btn btn-warning">Edit</a>
            </td>
        </tr>
    {% endfor %} 
    </tbody>
</table>
</div>
{% endblock %}
