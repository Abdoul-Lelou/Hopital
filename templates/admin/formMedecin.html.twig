{% extends 'base.html.twig' %}

{% block title %}Ajouter Medecin {% endblock %}
{% block div %}
<div></div>
<div class="container">
{% block content %}
<br><br>
<H1 align="center">Ajouter Medecin </H1>
    <div class="form-group col col-sm-6 container" style="background:gray;display:inligne-block" >
    {{ form_start(form)}}            
            {{ form_row(form.prenom,{'attr':{'placeholder':'prenom'} }) }}
            {{ form_row(form.nom,{'attr':{'placeholder':'nom'} }) }}
            {{ form_row(form.tel,{'attr':{'placeholder':'tel','name':'tel' } }) }}
            {{ form_row( form.dateNaissance,{'attr':{'placeholder':'date','data-provide':'datepicker',
                                                        'data-date-format':'dd-MM-yyyy'} }) }}
            {{ form_row(form.service,{'attr':{'class':'selectpicker'}})}}
            {{ form_row(form.specialites,{'attr':{'class':'selectpicker','multiple':'true'}}) }} 
    {{ form_end(form)}}
    <br>
    </div>
{% endblock %}
</div>
{% endblock %}
